#include <bits/stdc++.h>
using namespace std;

int main() {
    map<string , int>v;
    int q, x, diem;
    string ten;
    cin >> q;
    
    for (int i = 0; i < q; i++)
    {
        cin >> x;
        if( x == 1 )
        {
            cin >> ten ;
            cin >> diem ;
            v[ten] += diem;
        } 
          else if ( x == 2 )
        {
            cin >> ten;
            v[ten] = 0;
        } 
          else if ( x == 3 )
        {
            cin >> ten;
            cout << v[ten] << endl ;
        }
    }
    return 0;  
}
