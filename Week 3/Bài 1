#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;

void swapchar(string x, string y)
{
    char temp = x[0];
    x[0] = y[0];
    y[0] = temp;
    cout << x << " " << y;
}

int main() {
    string a, b;
    cin >> a >> b; 
    cout << a.size() << " " << b.size() << endl;
    cout << a + b << endl;
    swapchar(a,b);
    return 0;
}
