#include <bits/stdc++.h>

using namespace std;

/*
 * Complete the 'timeConversion' function below.
 *
 * The function is expected to return a STRING.
 * The function accepts STRING s as parameter.
 */

string timeConversion(string s) {
    int n = s.size() ;
    string mil = "";
    string normal = "";
    for(int i = n - 2 ; i < n ; i++) {normal += s[i];}
    if(normal == "AM")
    {
        string temp =s.substr(0,2);
        if(temp == "12")
        {
            s[0] = 0 + '0';
            s[1] = 0 + '0';
        }
        s.erase(n-2);
        mil = s;
    }else if (normal == "PM")
    {
        string temp1 = s.substr(0,2);
        string temp2 = s.substr(3,2);
        int m = stoi(temp1);
        int n = stoi(temp2);
        if(n >= 12 && m > 0) mil = s.substr(0,8);
        else 
        {
            n += 12 ;
            string hour = to_string(n);
            string els = s.substr(2,6);
            mil = hour + els;
        }
    }
    return mil;
}

int main()
{
    ofstream fout(getenv("OUTPUT_PATH"));

    string s;
    getline(cin, s);

    string result = timeConversion(s);

    fout << result << "\n";

    fout.close();

    return 0;
}
